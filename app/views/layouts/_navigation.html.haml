.navbar.navbar-light.bg-light.navbar-expand-lg
  = link_to 'Home', '#', class: 'navbar-brand'
  %button.navbar-toggler{ type: 'button', 'data-toggle': 'collapse', 'data-target': '#main-navbar', 'aria-controls': 'main-navbar', 'aria-expanded': 'false', 'aria-label': 'toggle navigation' }
    %span.navbar-toggler-icon
  .collapse.navbar-collapse#main-navbar
    .navbar-nav
      = link_to 'Events', events_path, class: 'nav-item nav-link'
      = link_to 'Milestones', milestones_path, class: 'nav-item nav-link' if @event
      = link_to 'Tasks', tasks_path, class: 'nav-item nav-link' if @event
