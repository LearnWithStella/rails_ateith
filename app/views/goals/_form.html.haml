= form_for @goal do |f|

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :start_time
    = f.datetime_select :start_time
  .field
    = f.label :end_time
    = f.datetime_select :end_time
  .field
    = f.label :milestone
    = f.select :milestone_id, Milestone.all.collect{ |milestone| [milestone.name, milestone.id]}, include_blank: 'select'
  .actions
    = f.submit 'Save'
